@model StronglyTypedViewsExample.Models.ViewModel

<html>
    <head>
        <title>Index3</title>
    </head>
    <body>
        <h4>Strongly Typed Views with View Models</h4>
        <table border="1">
            <caption>Employees</caption>
            <tr>
                <th>Emp ID</th>
                <th>Emp Name</th>
                <th>Salary</th>
            </tr>
            @foreach (var emp in Model.emps)
            {
                <tr>
                    <td>@emp.EmpID</td>
                    <td>@emp.EmpName</td>
                    <td>@emp.Salary</td>
                </tr>
            }
        </table>

        <table border="1">
            <caption>Products</caption>
            <tr>
                <th>Product ID</th>
                <th>Product Name</th>
                <th>Cost</th>
            </tr>
            @foreach (var prod in Model.prods)
            {
                <tr>
                    <td>@prod.ProductID</td>
                    <td>@prod.ProductName</td>
                    <td>@prod.Cost</td>
                </tr>
            }
        </table>
    </body>
</html>
